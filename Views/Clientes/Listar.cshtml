@model IEnumerable<CRUD1.Models.ModelClientes>

    @{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<div class="card">
    <div class="card-header">
        Listar Clientes
    </div>
    
    <div class="card-body"></div>
             <a asp-action="Crear" asp-controller="Clientes" class="btn btn-success">Crear Nuevo</a>
                <hr />
                <table class="table table-striped table-hover">
                     <thead>
                        <tr>
                           <th scope="col">ID </th>
                           <th scope="col">Nombre</th>
                           <th scope="col">Apellido</th>
                           <th scope="col">Cuit/Dni</th>
                           <th scope="col">Razon social</th>
                           <th scope="col">Tipo cliente</th>
                           <th scope="col">ID Usuario</th>
                           <th scope="col">Accion</th>
                        </tr>
                     </thead>
                    <tbody>
                    <tbody>
                         @foreach (var item in Model) {
                        <tr>
                          <td>
                             @item.clientes_ID
                          </td>
                          <td>
                            @item.nombre_clie
                          </td>
                          <td>
                            @item.apellido_clie
                          </td>
                          <td>
                            @item.cuit_dni
                          </td>
                          <td>
                            @item.razonsocial_clie
                          </td>
                          <td>
                             @item.tipo_cliente
                          </td>
                          <td>
                             @item.id_usuario
                          </td>
                           <td>
                                <a asp-action="Editar" asp-controller="Clientes" class="btn btn-success" asp-route-id="@item.clientes_ID">Editar</a>
                                <a asp-action="Eliminar" asp-controller="Clientes" class="btn btn-danger" asp-route-id="@item.clientes_ID">Eliminar</a>
                           </td>
                     </tr>
}                 
                     </tbody>
                </table>
</div>
              