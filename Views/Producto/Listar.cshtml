@model IEnumerable<CRUD1.Models.ModelProducto>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Productos
    </div>

    <div class="card-body"></div>
    <a asp-action="Crear" asp-controller="Producto" class="btn btn-success">Crear Nuevo</a>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID Producto</th>
                <th scope="col">ID Proveedor</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Stock</th>
                <th scope="col">Link Imagen</th>          
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                            @item.productoID
                    </td>
                    <td>
                            @item.proveedorID
                    </td>
                    <td>
                            @item.nom_producto
                    </td>
                    <td>
                            @item.precio
                    </td>
                    <td>
                            @item.stock
                    </td>
                    <td>
                            @item.link_imagen
                    </td>
                 
                    <td>
                        <a asp-action="Editar" asp-controller="Producto" class="btn btn-success" asp-route-id="@item.productoID">Editar</a>
                        <a asp-action="Eliminar" asp-controller="Producto" class="btn btn-danger" asp-route-id="@item.productoID">Eliminar</a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>



