@model IEnumerable<CRUD1.Models.ModelUsuarios>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Listar Usuarios
    </div>

    <div class="card-body"></div>
    <a asp-action="Crear" asp-controller="Usuarios" class="btn btn-success">Crear Nuevo</a>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID </th>
                <th scope="col">Usuario</th>
                <th scope="col">Contraseña</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                            @item.id_usuario
                    </td>
                    <td>
                            @item.email
                    </td>
                    <td>
                            @item.contraseña
                    </td>                   
            
                    <td>
                        <a asp-action="Editar" asp-controller="Usuarios" class="btn btn-success" asp-route-id="@item.id_usuario">Editar</a>
                        <a asp-action="Eliminar" asp-controller="Usuarios" class="btn btn-danger" asp-route-id="@item.id_usuario">Eliminar</a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>