@model CRUD1.Models.ModelPromocion

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Promocion
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Clientes" method="post">
            <input asp-for="promocionID" type="hidden" class="form-control" />

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar la Promocion "@Html.DisplayFor(model => model.nom_promo)"?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Promocion" class="btn btn-warning">Volver al listado</a>
        </form>
    </div>
</div>
