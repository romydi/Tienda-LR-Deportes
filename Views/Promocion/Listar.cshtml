@model IEnumerable<CRUD1.Models.ModelPromocion>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Promociones
    </div>

    <div class="card-body"></div>
    <a asp-action="Crear" asp-controller="Promocion" class="btn btn-success">Crear Nueva</a>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID </th>
                <th scope="col">Descuento</th>
                <th scope="col">Nombre Promo</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                            @item.promocionID
                    <td>
                                @item.descuento
                    </td>
                    <td>
                                @item.nom_promo
                    </td>               
                    <td>
                        <a asp-action="Editar" asp-controller="Promocion" class="btn btn-success" asp-route-id="@item.promocionID">Editar</a>
                        <a asp-action="Eliminar" asp-controller="Promocion" class="btn btn-danger" asp-route-id="@item.promocionID">Eliminar</a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>
