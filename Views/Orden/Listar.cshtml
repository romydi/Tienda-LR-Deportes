@model IEnumerable<CRUD1.Models.ModelOrden>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Listar Ordenes
    </div>

    <div class="card-body"></div>
    <a asp-action="Crear" asp-controller="Orden" class="btn btn-success">Crear Nuevo</a>
    <hr />
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID </th>
                <th scope="col">Producto ID</th>
                <th scope="col">Cliente ID</th>
                <th scope="col">Fecha Generacion</th>
                <th scope="col">Fecha Entrega </th>
                <th scope="col">Empleado ID</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
        <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                            @item.ordenID
                    </td>
                    <td>
                            @item.productoID
                    <td>
                                @item.clientes_ID
                    </td>
                    <td>
                                @item.fecha_generacion
                    </td>
                    <td>
                                @item.fecha_entrega
                    </td>
                    <td>
                                @item.empleadosID
                    </td>
                   
                    <td>
                        <a asp-action="Editar" asp-controller="Orden" class="btn btn-success" asp-route-id="@item.ordenID">Editar</a>
                        <a asp-action="Eliminar" asp-controller="Orden" class="btn btn-danger" asp-route-id="@item.ordenID">Eliminar</a>
                    </td>
                </tr>
                }
        </tbody>
    </table>
</div>
